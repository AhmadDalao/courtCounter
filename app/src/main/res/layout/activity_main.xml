<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/TeamALayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".MainActivity">

        <TextView
            android:textColor="@android:color/darker_gray"
            android:id="@+id/teamA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="4dp"
            android:textStyle="bold"
            android:text="@string/team_a"
            android:textSize="32sp" />


        <TextView
            android:textColor="@android:color/black"
            android:id="@+id/scoreA"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center"
            android:text="@string/score"
            android:textSize="32sp" />


        <Button
            android:id="@+id/AddThreeTeamA"
            android:layout_width="120dp"
            android:layout_height="52dp"
            android:layout_margin="16dp"
            android:background="@android:color/holo_blue_bright"
            android:onClick="AddThreeTeamA"
            android:text="@string/_3_points" />

        <Button
            android:background="@android:color/holo_blue_bright"

            android:id="@+id/AddTwoTeamA"
            android:layout_width="120dp"
            android:layout_height="52dp"
            android:layout_margin="16dp"
            android:onClick="AddTwoTeamA"
            android:text="@string/_2_points" />


        <Button
            android:background="@android:color/holo_blue_bright"

            android:id="@+id/AddFreeThrowTeamA"
            android:layout_width="120dp"
            android:layout_height="52dp"
            android:layout_margin="16dp"
            android:onClick="AddFreeThrowTeamA"
            android:text="@string/free_throw" />

    </LinearLayout>


    <FrameLayout
        android:layout_width="4dp"
        android:layout_height="375sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35sp"
        android:background="@android:color/darker_gray"
        android:foregroundGravity="center" />


    <LinearLayout
        android:id="@+id/TeamBlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_toEndOf="@+id/TeamALayout"
        android:layout_toRightOf="@+id/TeamALayout"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/teamB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="4dp"
            android:text="@string/team_b"
            android:textColor="@android:color/darker_gray"
            android:textSize="32sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/scoreB"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center"
            android:text="@string/_0"
            android:textColor="@android:color/black"
            android:textSize="32sp" />


        <Button
            android:id="@+id/AddThreeTeamB"

            android:layout_width="120dp"
            android:layout_height="52dp"
            android:layout_margin="16dp"
            android:background="@android:color/holo_blue_bright"
            android:onClick="AddThreeTeamB"
            android:text="@string/_3_points" />

        <Button
            android:id="@+id/AddTwoTeamB"

            android:layout_width="120dp"
            android:layout_height="52dp"
            android:layout_margin="16dp"
            android:background="@android:color/holo_blue_bright"
            android:onClick="AddTwoTeamB"
            android:text="@string/_2_points" />


        <Button
            android:id="@+id/AddFreeThrowTeamB"
            android:layout_width="120dp"
            android:layout_height="52dp"
            android:layout_margin="16dp"
            android:background="@android:color/holo_blue_bright"
            android:onClick="AddFreeThrowTeamB"
            android:text="@string/free_throw" />

    </LinearLayout>

    <Button
        android:background="@android:color/holo_blue_bright"
        android:layout_width="120dp"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:onClick="resetScore"
        android:text="@string/reset" />


</RelativeLayout>
